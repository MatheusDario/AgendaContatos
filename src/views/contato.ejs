<%- include('includes/head'); %>
  <%- include('includes/nav'); %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-5">
          <h1 class="display-4 text-center">Crie ou edite um contato</h1>
          <p class="text-center lead">Confira seus contato adicione ou edite se nescess√°rio</p>

          <%- include('includes/messages') %>

            <div class="col-lg">
              <form action="/contato/register" method="POST">
                <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                <div class="mb-3">
                  <label class="form-label">Nome</label>
                  <input value="<%= contato.nome %>" type="text" class="form-control" name="nome">
                </div>
                <div class="mb-3">
                  <label class="form-label">Sobrenome</label>
                  <input value="<%= contato.sobrenome %>" type="text" class="form-control" name="sobrenome">
                </div>
                <div class="mb-3">
                  <label class="form-label">Email</label>
                  <input value="<%= contato.email %>" type="email" class="form-control" name="email">
                </div>
                <div class="mb-3">
                  <label class="form-label">Telefone</label>
                  <input value="<%= contato.telefone %>" type="tel" class="form-control" name="telefone">
                </div>
                <button type="submit" class="btn btn-primary my-3">Adicionar</button>
              </form>
            </div>
          </div>

          <div class="col-lg-2"></div>
        </div>
      </div>

      <%- include('includes/footer'); %>