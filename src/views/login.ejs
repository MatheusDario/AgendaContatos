<%- include('includes/head'); %>
  <%- include('includes/nav'); %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-5">
          <h1 class="display-3 text-center">Criar conta ou Entrar</h1>
          <p class="text-center lead">Para acessar seus contatos faça um cadastro ou seu login</p>

          <%- include('includes/messages') %>

          <div class="row">
            <div class="col-lg">
              <h4>Faça seu Cadastro:</h4>
              <p>Se não possui uma conta, faça seu cadastro:</p>
              <form class="form-cadastro" action="/login/register" method="POST">
                <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                <div class="mb-3">
                  <label class="form-label">Digite seu E-mail</label>
                  <input type="email" class="form-control" name="email">
                </div>
                <div class="mb-3">
                  <label class="form-label">Digite um Senha</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary my-3">Criar minha conta</button>
              </form>
            </div>

            <div class="col-lg">
              <h4>Faça seu Login:</h4>
              <p>Se você já possui uma conta, faça seu login:</p>
              <form class="form-login" action="/login/login" method="POST">
                <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                <div class="mb-3">
                  <label class="form-label">Digite seu E-mail</label>
                  <input type="email" class="form-control" name="email">
                </div>
                <div class="mb-3">
                  <label class="form-label">Digite sua Senha</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary my-3">Entrar</button>
              </form>
            </div>
          </div>

          <div class="col-lg-2"></div>
        </div>
      </div>

      <%- include('includes/footer'); %>