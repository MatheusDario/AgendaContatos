<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-5">
            <h1 class="display-3 text-center text-light">Agenda</h1>
            <p class="text-center lead text-light">Seus contatos estão abaixo</p>

            <%- include('includes/messages') %>

            <% if(contatos.length > 0) { %>
            <div class="responsive-table">
                <table class="table my-3 table-dark table-striped-columns">
                    <thead>
                        <tr>
                          <th scope="col">Nome</th>
                          <th scope="col">Sobrenome</th>
                          <th scope="col">Telefone</th>
                          <th scope="col">Email</th>
                          <th scope="col">Editar</th>
                          <th scope="col">Deletar</th>

                        </tr>
                      </thead>
                      <tbody>

                        <% contatos.forEach(contato => { %>
                          <tr>
                            <td><%= contato.nome %></td>
                            <td><%= contato.sobrenome %></td>
                            <td><%= contato.telefone %></td>
                            <td><%= contato.email %></td>
                            <td><a class="" href="/contato/<%= contato._id %>">Editar</a></td>
                            <td><a class="text-danger" href="/contato/delete/<%= contato._id %>">Deletar</a></td>
                            
                          </tr>
                        <%})%>
                       
                      </tbody>
                    
                </table>
            </div>
            <% } else { %>

              <div>
                <p class="text-center text-white lead">Não existem contatos na sua agenda.</p>
              </div>
              <% } %>

        </div>
        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer'); %>